@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.special-page
	display: flex
	flex-direction: column
	&__title
		text-align left
	&__h1
		text-align: left
		color #04afda
	&__text
		line-height 1.3
		letter-spacing 0.5px
		margin-bottom 20px
		&_subtitle
			font-size 20px !important
			&_rules
				color #04afda
	&__container
		flex($ai: stretch)
	&__top-text
		width 49%
	&__img-wrapper
		width 49%
	&__img
		width 100%
	&__button
		margin-top: 15px
		border: 1px solid #04afda
		color #04afda
		align-self center

@media screen and (max-width $view-port-large)
	.special-page
		&__container
			flex-direction column
		&__top-text
			width 100%
		&__img-wrapper
			width 100%
			margin-bottom 20px

@media screen and (max-width $view-port-medium)
	.special-page
		&__button
			margin-top: 0

@media screen and (max-width $view-port-mob)
	.special-page
		&__text
			font-size 15px
			&_subtitle
				font-size 18px !important


@media screen and (max-width $view-port-sm)
	.special-page
		&__text
			font-size 14px
			&_subtitle
				font-size 17px !important