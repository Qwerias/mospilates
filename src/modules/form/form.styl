@require '../../css/partials/_params.styl'
@require '../../css/partials/_mixins.styl'

.modal
	width 500px
	height 350px
	left 50%
	top 50%
	margin-top -175px
	margin-left -250px
	z-index 400
	position fixed
	border-radius 5px
	background-color #fff
	padding 10px 0
	box-shadow 0 0 6px 1px rgba(0,0,0,0.3)
	&__close
		position absolute
		right 10px
		top 10px
		width 25px
		height 25px
		cursor pointer

.form
	padding 45px
	&__input
		width 100%
		border solid 1px #04afda
		border-radius 5px
		padding 10px
		font-size 22px
		margin-bottom 20px
	&__title
		font-size 36px !important
		margin-bottom 30px !important
	&__container
		flex()
	&__button
		display block
		text-align center
		padding 15px 25px
		text-transform uppercase
		background-color #04afda
		color #fff
		letter-spacing 0.4px
		font-size 13px
		border-radius 5px
		cursor pointer
		transition .3s all
		border 1px solid #04afda
		&:focus
			outline none
		&:hover
			color #04afda
			background-color #fff
	&__text
		font-size 12px
		text-transform uppercase
		width 60%

.thanks
	padding 90px 50px 0
	line-height 1.3
	color #040404
	font-size 22px
	text-align center
	&__text
		&:first-child
			margin-bottom 20px

@media screen and (max-width $view-port-medium)
	.modal
		width 280px
		height 300px
		margin-top -150px
		margin-left -140px

	.form
		padding 20px
		&__title
			font-size 26px !important
			margin-bottom 15px !important
		&__label
			width 90%
			font-size 16px
			margin-top 15px
		&__input
			font-size 16px
			padding 5px
		&__button
			font-size 16px
			padding 10px 15px
			margin-top 0
			margin-bottom 10px
		&__container
			flex-direction column
			text-align center
		&__text
			width 100%
			line-height 1.3

	.thanks
		padding 40px 15px
		font-size 16px
