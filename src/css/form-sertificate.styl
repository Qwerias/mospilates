@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.form-sertificate
	flex(column)
	padding 40px
	background-color #04afda
	height 400px
	margin-top -200px
	&__title
		font-size 26px
		color #fff
		text-transform uppercase
		margin-bottom 30px
		text-align center
		letter-spacing 0.7px
	&__list
		flex(column)
		width 100%
	&__item
		margin-bottom 20px
		width 100%
		flex()
		&:last-child
			margin-bottom 0
	&__text
		color #fff
		font-size 18px
		letter-spacing 0.5px
	&__input
		font-family 'PT Sans', sans-serif
		font-size 18px
		color #04afda
		width 60%
		padding 5px 10px
		&:focus
			outline none
	&__button
		margin-top 20px
		text-transform: uppercase
		font-size 16px
		padding 10px 15px
		color #fff
		border 1px solid #fff
		border-radius: 5px
		cursor pointer
		transition .3s all
		letter-spacing 0.5px
		background-color #04afda
		&:focus
			outline none
		&:hover
			background-color #fff
			color #04afda
	&-button
		font-size 18px
		text-transform uppercase
		padding 15px 15px
		color #04afda
		border 1px solid #04afda
		border-radius: 5px
		cursor pointer
		transition .3s all
		letter-spacing 0.5px
		width 300px
		margin 30px auto 0
		flex($jc: center)
		&:hover
			background-color #04afda
			color #fff


@media screen and (max-width $view-port-medium)
	.form-sertificate
		padding 30px 20px
		&__title
			font-size: 20px
			line-height 1.3
		&__text
			font-size: 14px
		&__input
			font-size: 14px
			width 50%