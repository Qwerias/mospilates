.december
	padding-top 50px
	padding-bottom 40px
	background-color #01c0eb
	position relative
	display: flex
	flex-direction: column
	align-items: center
	&__title
		padding-bottom 30px
		font-size 48px
		font-weight 700
		text-align center
		color #fff
		line-height 1.3

@media screen and (max-width $view-port-large)
	.december
		&__title
			font-size 44px

@media screen and (max-width $view-port-tablet)
	.december
		&__title
			font-size 40px
			padding-bottom 0

@media screen and (max-width $view-port-medium)
	.december
		&__title
			font-size 36px

@media screen and (max-width $view-port-mob)
	.december
		&__title
			font-size 32px

@media screen and (max-width $view-port-sm)
	.december
		&__title
			font-size 28px