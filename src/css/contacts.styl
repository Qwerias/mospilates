@require 'partials/_params.styl'
@require 'partials/_mixins.styl'

.contacts
	&__title
		text-align left
	&__descr
		margin-left 0 !important
		text-align left !important
		line-height 1.3
		margin-bottom 30px !important
	&__phone
		font-size 30px
		color #04afda
		&_link
			link(#04afda)
	&__map
		height 500px
		width 100%
		padding-bottom: 0 !important

#contacts-map
	width 100%
	height 100%

@media screen and (max-width $view-port-large)
	.contacts
		&__phone
			font-size 28px
		&__map
			height 400px

@media screen and (max-width $view-port-tablet)
	.contacts
		&__phone
			font-size 26px
		&__map
			height 350px

@media screen and (max-width $view-port-medium)
	.contacts
		&__phone
			font-size 24px
		&__map
			height 300px

@media screen and (max-width $view-port-mob)
	.contacts
		&__phone
			font-size 22px
		&__map
			height 250px

@media screen and (max-width $view-port-sm)
	.contacts
		&__phone
			line-height 1.3
			font-size 22px
			flex(column, $ai: flex-start)
		&__map
			height 200px