@require '../../css/partials/_params.styl'
@require '../../css/partials/_mixins.styl'

.december
	&__box
		padding 0 15% 0 20%
		margin-top 50px
		display flex
		flex-direction column
		align-items center
	&__item
		padding-left 80px
		padding-bottom 80px
		border-left 2px solid #fff
		position relative
		width 90%
		line-height 1.3
		letter-spacing: 0.5px
		&:before
			content ''
			display block
			position absolute
			left -12px
			top 0
			background-color #fff
			height 24 px
			width 24px
			border-radius 50%
		&:last-child
			border none
		&_time
			color #fff
			font-size 24px
			margin-bottom 5px
		&_title
			color #fff
			font-size 28px
			margin-bottom 5px
		&_text
			font-size 24px
			color #000

@media screen and (max-width $view-port-xl)
	.december
		&__box
			padding 0 15% 0 18%

@media screen and (max-width $view-port-large)
	.december
		&__box
			padding 0 12.5% 0 15%
		&__item
			padding-left 60px
			padding-bottom 60px
			&_title
				font-size 26px

@media screen and (max-width $view-port-tablet)
	.december
		&__box
			padding 0 10% 0 12.5%
		&__item
			padding-left 50px
			padding-bottom 50px
			&_title
				font-size 24px

@media screen and (max-width $view-port-medium)
	.december
		&__box
			padding 0 7.5% 0 10%
		&__item
			padding-left 40px
			padding-bottom 40px
			&_title
				font-size 22px

@media screen and (max-width $view-port-mob)
	.december
		&__item
			padding-left 30px
			padding-bottom 30px
			&_title
				font-size 20px

@media screen and (max-width $view-port-sm)
	.december
		&__box
			padding 0 5% 0 7.5%
		&__item
			&_title
				font-size 18px