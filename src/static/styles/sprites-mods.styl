@require '../../css/partials/_params.styl'

.icon
	&__figure
		width 100%
		height 100%
		color #fff
	&__arrow_gallery
		height 97px
		fill #000
		cursor pointer
		opacity 0.8
		transition .3s all
		&:hover
			opacity 1
	&__arrow_left
			transform rotate(180deg)

@media screen and (max-width $view-port-large)
	.icon
		&__arrow_gallery
			height 87px

@media screen and (max-width $view-port-tablet)
	.icon
		&__arrow_gallery
			height 77px

@media screen and (max-width $view-port-medium)
	.icon
		&__arrow_gallery
			height 67px

@media screen and (max-width $view-port-mob)
	.icon
		&__arrow_gallery
			height 57px

@media screen and (max-width $view-port-sm)
	.icon
		&__arrow_gallery
			height 47px