@require '../../css/partials/_params.styl'
@require '../../css/partials/_mixins.styl'

.nav
	padding 20px 0 0
	&__list
		display: flex
	&__item
		margin-right 13px
		&:last-child
			margin-right: 0
		&_link
			link(#040404)
			font-size 16px
			text-transform uppercase
			position relative
			&:hover
				.nav__underline
					opacity 0.9
			&_small
				font-size 10px
				link(#04afda)
				text-transform uppercase
				font-weight bold
				& .nav__underline
					background-color: #04afda
	&__underline
		transition .3s all
		position absolute
		left 0
		right 0
		bottom 0
		height 1px
		opacity 0
		background-color #040404


@media screen and (max-width 870px)
	.nav
		width 100%
		position absolute
		top 100%
		z-index 5
		padding 0
		display none
		&__list
			flex-direction column
			width 100%
		&__item
			width 100%
			color #fff
			background-color lighten(#02b2dd, 7%)
			margin 0
			border-bottom 1px solid #eef3fd
			&:last-child
				border-bottom none
			&_link
				display block
				link(#fff)
				padding 15px 30px
				text-transform uppercase
				height 100%
				width 100%
		&__underline
			display none